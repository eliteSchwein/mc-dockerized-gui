{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "standard",
        "galex"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "import/no-anonymous-default-export": [
            "error",
            {
                "allowArray": true,
                "allowArrowFunction": true,
                "allowAnonymousClass": true,
                "allowAnonymousFunction": true,
                "allowCallExpression": true,
                "allowLiteral": true,
                "allowObject": true
            }
        ]
    }
}
